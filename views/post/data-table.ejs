<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>id</th>
            <th>Title</th>
            <th>Image</th>
            <th>Review</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <%posts.forEach(post=>{ %>
        <tr>
            <td>
                <%=post.id%>
            </td>
            <td>
                <%=post.title%>
            </td>
            <td>
                <%=post.image%>
            </td>
            <td>
                <%=post.review%>
            </td>
            <td>
                <a href=""></a>
                <button type="button" class="btn btn-success btn-xs"> <a href="/posts/<%=post.id%>">view </a>
                </button>
                <form action="/posts/delete/<%=post.id%>" method="POST">
                    <button type="submit" class="btn btn-danger btn-xs"> delete <i class="fa fa-trash">
                        </i> </button>
                </form>
            </td>
        </tr>
        <% }) %>

    </tbody>
</table>