<form action="/posts/edit/<%= posts.id %>" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="">Title</label>
                <input class="form-control" type="text" name="title">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="review">review</label>
                <textarea name="review" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label for="tag">Tag</label>
                <div class="bootstrap-input">
                    <input type="text" name="tags" value="Amsterdam,Washington,Sydney,Beijing,Cairo" data-role="tagsinput">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

</form>
